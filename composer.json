{
  "name": "solophp/event-dispatcher",
  "description": "Minimal, PSR-14 compatible event dispatcher with priorities and stoppable propagation.",
  "type": "library",
  "license": "MIT",
  "keywords": ["event dispatcher", "psr-14", "event listener", "event", "dispatcher"],
  "autoload": {
    "psr-4": {
      "Solo\\EventDispatcher\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "psr/event-dispatcher": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "phpunit --testdox",
    "cs": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}

